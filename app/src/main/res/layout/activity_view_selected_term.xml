<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/selectedTermName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/selectedTermStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectedTermName" />
    <TextView
        android:id="@+id/selectedTermEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectedTermStartDate" />
    <include android:id="@+id/selectedTermCourses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/selectedTermEndDate"
        layout="@layout/activity_terms_recyclerview"/>
</RelativeLayout>